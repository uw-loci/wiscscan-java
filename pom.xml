<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/xsd/maven-v4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>loci</groupId>
    <artifactId>pom-loci</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>wiscscan-java</artifactId>

  <name>WiscScan Java code</name>
  <description>Java code for use with WiscScan.</description>
  <inceptionYear>2008</inceptionYear>

  <licenses>
    <license>
      <name>BSD</name>
      <url>http://dev.loci.wisc.edu/svn/software/trunk/projects/wiscscan-java/LICENSE.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>${scifio.groupId}</groupId>
      <artifactId>loci-common</artifactId>
      <version>${scifio.version}</version>
    </dependency>

    <dependency>
      <groupId>${scifio.groupId}</groupId>
      <artifactId>bio-formats</artifactId>
      <version>${scifio.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${scifio.groupId}</groupId>
      <artifactId>ome-xml</artifactId>
      <version>${scifio.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>flow-cytometry</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <packageName>loci.wiscscan</packageName>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>loci.maven.plugins</groupId>
        <artifactId>cppwrap-maven-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <configuration>
          <libraries>
            <library>${scifio.groupId}:bio-formats:jar:${scifio.version}</library>
            <library>${scifio.groupId}:loci-common:jar:${scifio.version}</library>
            <library>${scifio.groupId}:ome-xml:jar:${scifio.version}</library>
            <library>${project.groupId}:flow-cytometry:jar:${project.version}</library>
          </libraries>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <developers>
    <developer>
      <id>hanly</id>
      <name>Hanly De Los Santos</name>
      <url>http://loci.wisc.edu/people/hanly-de-los-santos</url>
      <organization>UW-Madison LOCI</organization>
      <organizationUrl>http://loci.wisc.edu/</organizationUrl>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>-6</timezone>
    </developer>
    <developer>
      <id>curtis</id>
      <name>Curtis Rueden</name>
      <email>ctrueden@wisc.edu</email>
      <url>http://loci.wisc.edu/people/curtis-rueden</url>
      <organization>UW-Madison LOCI</organization>
      <organizationUrl>http://loci.wisc.edu/</organizationUrl>
      <roles>
        <role>architect</role>
        <role>developer</role>
      </roles>
      <timezone>-6</timezone>
      <properties>
        <picUrl>http://loci.wisc.edu/files/loci/images/people/curtis-2010.jpg</picUrl>
      </properties>
    </developer>
  </developers>

  <!-- NB: for project parent, in case of partial checkout -->
  <repositories>
    <repository>
      <id>loci.releases</id>
      <url>http://dev.loci.wisc.edu/maven2/releases</url>
    </repository>
    <repository>
      <id>loci.snapshots</id>
      <url>http://dev.loci.wisc.edu/maven2/snapshots</url>
    </repository>
  </repositories>

</project>
